# ==============================================
# DDW LEADMASTER SYSTEM - Environment Variables
# ==============================================

# ==================
# DATABASE
# ==================
DB_HOST=sv46.byethost46.org
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name
DB_PORT=3306

# ==================
# SERVER
# ==================
PORT=3010
NODE_ENV=development
HOST=localhost

# ==================
# SESSION & SECURITY
# ==================
SESSION_SECRET=your_session_secret_here_min_32_chars
SESSION_MAX_AGE=86400000
# Para generar: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# ==================
# REDIS
# ==================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==================
# OPENAI API
# ==================
OPENAI_API_KEY=sk-proj-your-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# ==================
# WHATSAPP BOT
# ==================
# Activar/desactivar respuestas automáticas
BOT_RESPONDER_ACTIVO=false

# Modo de ejecución: 'local' o 'server'
HOST_ENV=local

# Delay entre mensajes (ms) para evitar ban
MESSAGE_DELAY=3000

# Máximo de mensajes por minuto
MAX_MESSAGES_PER_MINUTE=20

# ==================
# LOGS
# ==================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d

# ==================
# RATE LIMITING
# ==================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================
# CORS
# ==================
CORS_ORIGIN=http://localhost:3010
CORS_CREDENTIALS=true

# ==================
# PUPPETEER (WhatsApp Web)
# ==================
PUPPETEER_HEADLESS=true
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox

# ==================
# FEATURES FLAGS
# ==================
FEATURE_MULTI_SESSION=true
FEATURE_AI_RESPONSES=true
FEATURE_BULK_SENDER=true
FEATURE_LEAD_MANAGEMENT=true
