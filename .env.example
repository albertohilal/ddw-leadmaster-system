# ==============================================
# DDW LEADMASTER SYSTEM - Environment Template
# ==============================================

# ==================
# DATABASE
# ==================
DB_HOST=your_database_host
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=your_database_name
DB_PORT=3306

# ==================
# SERVER
# ==================
PORT=3011
NODE_ENV=development
HOST=localhost

# ==================
# SESSION & SECURITY
# ==================
SESSION_SECRET=your_session_secret_min_32_chars_required
SESSION_MAX_AGE=86400000

# ==================
# REDIS
# ==================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==================
# OPENAI API
# ==================
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# ==================
# GOOGLE API
# ==================
GOOGLE_API_KEY=your_google_api_key

# ==================
# WHATSAPP BOT
# ==================
BOT_RESPONDER_ACTIVO=false
HOST_ENV=local
SESSION_NAME=whatsapp-bot-responder
MESSAGE_DELAY=3000
MAX_MESSAGES_PER_MINUTE=20
WHATSAPP_SESSIONS_PATH=./tokens

# ==================
# LOGS
# ==================
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7d

# ==================
# RATE LIMITING
# ==================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================
# CORS
# ==================
CORS_ORIGIN=http://localhost:3010
CORS_CREDENTIALS=true

# ==================
# FEATURES FLAGS
# ==================
FEATURE_MULTI_SESSION=true
FEATURE_AI_RESPONSES=false
FEATURE_BULK_SENDER=true
FEATURE_LEAD_MANAGEMENT=true
